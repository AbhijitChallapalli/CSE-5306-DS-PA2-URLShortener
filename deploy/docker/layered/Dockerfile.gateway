FROM python:3.11-slim
WORKDIR /app

# Copy requirements
COPY layered_grpc/api_gateway/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy protos and generate gRPC code
COPY layered_grpc/protos/*.proto ./protos/
RUN python -m grpc_tools.protoc \
    -I./protos \
    --python_out=. \
    --grpc_python_out=. \
    ./protos/*.proto

# Copy application
COPY layered_grpc/api_gateway/app.py .

EXPOSE 8080
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8080"]
