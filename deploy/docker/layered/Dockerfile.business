FROM python:3.11-slim
WORKDIR /app

# Copy requirements
COPY layered_grpc/business_logic/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy protos and generate gRPC code
COPY layered_grpc/protos/*.proto ./protos/
RUN python -m grpc_tools.protoc \
    -I./protos \
    --python_out=. \
    --grpc_python_out=. \
    ./protos/*.proto

# Copy application
COPY layered_grpc/business_logic/app.py .

EXPOSE 50052
CMD ["python", "app.py"]
