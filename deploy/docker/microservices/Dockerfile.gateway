# File: deploy/docker/microservices/Dockerfile.gateway
FROM python:3.11-slim
WORKDIR /app
COPY microservices_http/api_gateway/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
COPY common /app/common
COPY persistence /app/persistence
COPY microservices_http/api_gateway /app
ENV PYTHONPATH=/app
EXPOSE 8080
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8080"]
