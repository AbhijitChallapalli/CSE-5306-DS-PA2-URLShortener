# File: deploy/docker/microservices/Dockerfile.analytics
FROM python:3.11-slim
WORKDIR /app
COPY microservices_http/analytics_service/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
COPY common /app/common
COPY persistence /app/persistence
COPY microservices_http/analytics_service /app
ENV PYTHONPATH=/app
EXPOSE 8002
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8003"]
